<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bloodFinder.bloodSavior">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bloodbank_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyBloodBank">
        <activity android:name="com.bloodFinder.bloodSavior.notificationPage.NotificationActivity"></activity>
        <activity android:name="com.bloodFinder.bloodSavior.allUsers.searchByName.SearchByName" />
        <activity android:name="com.bloodFinder.bloodSavior.allUsers.AllUsers" />
        <activity android:name="com.bloodFinder.bloodSavior.resetPassword.ResetPassword" />
        <activity android:name="com.bloodFinder.bloodSavior.filterPosts.FilterPosts" />
        <activity android:name="com.bloodFinder.bloodSavior.selectCountry.SelectCountry" />
        <activity android:name="com.bloodFinder.bloodSavior.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bloodFinder.bloodSavior.donarsGroup.DonorsGroup" />
        <activity android:name="com.bloodFinder.bloodSavior.posts.editRequestPost.EditRequest" />
        <activity android:name="com.bloodFinder.bloodSavior.userProfile.editProfileActivity.EditProfileActivity" />
        <activity android:name="com.bloodFinder.bloodSavior.privacyPolicy.PrivacyPolicy" />
        <activity android:name="com.bloodFinder.bloodSavior.aboutUs.AboutUs" />
        <activity android:name="com.bloodFinder.bloodSavior.bloodBank.BloodBank" />
        <activity android:name="com.bloodFinder.bloodSavior.posts.SingleRequest.SingleRequest" />
        <activity android:name="com.bloodFinder.bloodSavior.chats.ChattingActivity.ChattingActivity" />
        <activity android:name="com.bloodFinder.bloodSavior.posts.makeNewRequest.MakeNewRequest" />
        <activity android:name="com.bloodFinder.bloodSavior.userProfile.userProfile.UserProfile" />
        <activity android:name="com.bloodFinder.bloodSavior.login.LoginActivity" />
        <activity android:name="com.bloodFinder.bloodSavior.signUp.Register" />
        <activity android:name="com.bloodFinder.bloodSavior.mainActivity.MainActivity" />

        <service
            android:name="com.bloodFinder.bloodSavior.notification.ChatMessagingService"
            android:exported="false"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
    </application>

</manifest>