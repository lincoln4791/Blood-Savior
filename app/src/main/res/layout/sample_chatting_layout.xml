<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_sampleMessagesListLayout"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_SentMessagec_sampleMessagesListLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/ll_SentMessagec_sampleMessagesListLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/sentMessageBackground"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_sentMessage_sampleMessagesListLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="@string/hellowSIrHowAreYou" />

            <TextView
                android:id="@+id/tv_sentMessageTime_sentMessage_sampleMessagesListLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:textSize="10sp"
                android:layout_weight="1"
                android:textColor="@color/white"
                tools:text="09:12" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_SentImageMessage_sampleMessagesListLayout"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_SentMessagec_sampleMessagesListLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_SentImageMessage_sampleMessagesListLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_SentMessagec_sampleMessagesListLayout">

            <ImageView
                android:id="@+id/iv_SentImageMessage_sampleMessagesListLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile_picture"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_attachment" />

            <TextView
                android:id="@+id/tv_SentImageMessageTime_sampleMessagesListLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:textFontWeight="1"
                app:layout_constraintBottom_toBottomOf="@+id/iv_SentImageMessage_sampleMessagesListLayout"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="09:12" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_receivedMessage_sampleMessagesListLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_SentMessagec_sampleMessagesListLayout">

        <LinearLayout
            android:id="@+id/ll_receivedMessage_sampleMessagesListLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/receivedMessageBackground"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_SentMessagec_sampleMessagesListLayout">

            <TextView
                android:id="@+id/tv_receivedMessage_sampleMessagesListLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="3dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="18sp"
                tools:text="@string/hellowSIrHowAreYou" />

            <TextView
                android:id="@+id/tv_receivedMessageTime_sampleMessagesListLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:textSize="10sp"
                android:layout_weight="1"
                tools:text="09:12" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>




    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_receivedImageMessage_sampleMessagesListLayout"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_receivedMessage_sampleMessagesListLayout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_receivedImageMessage_sampleMessagesListLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_receivedMessage_sampleMessagesListLayout">

            <ImageView
                android:id="@+id/iv_receivedImageMessage_sampleMessagesListLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile_picture"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_attachment" />

            <TextView
                android:id="@+id/tv_receivedImageMessageTime_sampleMessagesListLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_receivedImageMessage_sampleMessagesListLayout"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="09:12" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>