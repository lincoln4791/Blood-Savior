<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".filterPosts.FilterPosts">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_back_toolbar_filterPostsActivity"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_filterPostsActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar_filterPostsActivity" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_filterPostsActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_back_toolbar_filterPostsActivity"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/searchPosts"
            app:titleTextColor="@color/red" />


        <TextView
            android:id="@+id/tv_chooseBloodGroup_filterPostsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:text="@string/chooseBloodGroup"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_filterPostsActivity" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup_bloodGroups_filterPostsActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_chooseBloodGroup_filterPostsActivity"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_APositive_bloodGroup_filterPostsActivity"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="@string/aPositive"
                android:textAlignment="center"
                android:textColor="@drawable/text_color_chip"
                app:chipBackgroundColor="@drawable/background_chip_red"
                app:chipCornerRadius="100dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_ANegative_bloodGroup_filterPostsActivity"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/aNegative"
                android:textAlignment="center"
                android:textColor="@drawable/text_color_chip"
                app:chipBackgroundColor="@drawable/background_chip_red"
                app:chipCornerRadius="100dp"
                app:chipEndPadding="8dp"
                app:chipStartPadding="8dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_BPositive_bloodGroup_filterPostsActivity"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/BPositive"
                android:textAlignment="center"
                android:textColor="@drawable/text_color_chip"
                android:textSize="50sp"
                app:chipBackgroundColor="@drawable/background_chip_red"
                app:chipCornerRadius="100dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_BNegative_bloodGroup_filterPostsActivity"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/BNegative"
                android:textAlignment="center"
                android:textColor="@drawable/text_color_chip"
                android:textSize="50sp"
                app:chipBackgroundColor="@drawable/background_chip_red"
                app:chipCornerRadius="100dp"
                app:chipEndPadding="8dp"
                app:chipStartPadding="8dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_OPositive_bloodGroup_filterPostsActivity"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/O_positive"
                android:textAlignment="center"
                android:textColor="@drawable/text_color_chip"
                android:textSize="50sp"
                app:chipBackgroundColor="@drawable/background_chip_red"
                app:chipCornerRadius="100dp"
                app:chipEndPadding="7dp"
                app:chipStartPadding="6dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_ONegative_bloodGroup_filterPostsActivity"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/ONegative"
                android:textAlignment="center"
                android:textColor="@drawable/text_color_chip"
                android:textSize="50sp"
                app:chipBackgroundColor="@drawable/background_chip_red"
                app:chipCornerRadius="100dp"
                app:chipEndPadding="7dp"
                app:chipStartPadding="7dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_ABPositive_bloodGroup_filterPostsActivity"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/ABPositive"
                android:textAlignment="center"
                android:textColor="@drawable/text_color_chip"
                android:textSize="50sp"
                app:chipBackgroundColor="@drawable/background_chip_red"
                app:chipCornerRadius="100dp"
                app:chipEndPadding="1dp"
                app:chipStartPadding="1dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_ABNegative_bloodGroup_filterPostsActivity"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/ABNegative"
                android:textAlignment="center"
                android:textColor="@drawable/text_color_chip"
                android:textSize="50sp"
                app:chipBackgroundColor="@drawable/background_chip_red"
                app:chipCornerRadius="100dp"
                app:chipEndPadding="5dp"
                app:chipStartPadding="5dp"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp" />


        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/tv_gender_filterPostsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/cause"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_chooseBloodGroup_filterPostsActivity"
            app:layout_constraintTop_toBottomOf="@+id/chipGroup_bloodGroups_filterPostsActivity" />

        <HorizontalScrollView
            android:id="@+id/scrollVIew_cause_filterPostsActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_gender_filterPostsActivity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_gender_filterPostsActivity"
            app:layout_constraintTop_toTopOf="@+id/tv_gender_filterPostsActivity">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup_cause_filterPostsActivity"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollIndicators="right"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cause_cancer_filterPostsActivity"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancer" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cause_dengue_filterPostsActivity"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dengue" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cause_caesar_filterPostsActivity"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/caesar" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cause_thalassemia_filterPostsActivity"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thalassemia" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cause_delevery_filterPostsActivity"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thalassemia" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cause_other_filterPostsActivity"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other" />


            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_district_filterPostsActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="25dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_backspaceDistrict_filterPostsActivity"
            app:layout_constraintStart_toStartOf="@+id/tv_chooseBloodGroup_filterPostsActivity"
            app:layout_constraintTop_toBottomOf="@+id/tv_gender_filterPostsActivity">

            <TextView
                android:id="@+id/tv_district_filterPostsActivity"
                style="@style/styleRegistrationActivity_EditTexts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#FBC1C1"
                android:hint="@string/selectYourDistrict"
                android:padding="10dp" />
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/iv_backspaceDistrict_filterPostsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_backspace"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/cv_district_filterPostsActivity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cv_district_filterPostsActivity"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_search_filterPostsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/ic_blood_search"
            android:padding="10dp"
            android:text="@string/search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_district_filterPostsActivity" />

        <com.leo.simplearcloader.SimpleArcLoader
            android:id="@+id/arcLoader_filterPostsActivity"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:foregroundGravity="center"
            android:visibility="gone"
            tools:visibility="gone"
            app:arc_style="simple_arc"
            app:layout_constraintTop_toBottomOf="@+id/btn_search_filterPostsActivity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_Posts_filterPostsActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_search_filterPostsActivity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_emptyFeed_filterPostsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/no_postToDisplay"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/redressed_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_search_filterPostsActivity"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/pb_morePostLoading_filterPostsActivity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_Posts_filterPostsActivity"/>


        <TextView
            android:id="@+id/tv_allCaughtUp_filterPostsActivity"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/redressed_regular"
            android:text="@string/allCaughtUp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/rv_Posts_filterPostsActivity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>