<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_sampleMessagesListLayout"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/ll_SentMessagec_sampleMessagesListLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/sentMessageBackground"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_sentMessage_sampleMessagesListLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:textColor="@color/white"
            tools:text="@string/hellowSIrHowAreYou" />

        <TextView
            android:id="@+id/tv_sentMessageTime_sentMessage_sampleMessagesListLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            tools:text="09:12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_SentImageMessage_sampleMessagesListLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/sentMessageBackground"
        android:orientation="vertical"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_SentMessagec_sampleMessagesListLayout">

        <ImageView
            android:id="@+id/iv_SentImageMessage_sampleMessagesListLayout"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile_picture"
            app:srcCompat="@drawable/ic_attachment" />

        <TextView
            android:id="@+id/tv_SentImageMessageTime_sampleMessagesListLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            tools:text="09:12" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_receivedMessage_sampleMessagesListLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/receivedMessageBackground"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_SentMessagec_sampleMessagesListLayout">

        <TextView
            android:id="@+id/tv_receivedMessage_sampleMessagesListLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            tools:text="@string/hellowSIrHowAreYou" />

        <TextView
            android:id="@+id/tv_receivedMessageTime_sampleMessagesListLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            tools:text="09:12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_receivedImageMessage_sampleMessagesListLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/receivedMessageBackground"
        android:orientation="vertical"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_receivedMessage_sampleMessagesListLayout">

        <ImageView
            android:id="@+id/iv_receivedImageMessage_sampleMessagesListLayout"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile_picture"
            app:srcCompat="@drawable/ic_attachment" />

        <TextView
            android:id="@+id/tv_receivedImageMessageTime_sampleMessagesListLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            tools:text="09:12" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>