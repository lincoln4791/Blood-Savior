<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".requests.AcceptedFragment.AcceptedFragment">

   <TextView
       android:id="@+id/tv_emptyListText_acceptedFragment"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/redressed_regular"
       android:text="@string/listisempty"
       android:textSize="24sp"
       android:textStyle="bold"
       android:visibility="gone"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@+id/rv_posts_acceptedRequestsFragment"
       tools:visibility="visible" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/rv_posts_acceptedRequestsFragment"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/appBackground"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>