<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity.requests.SingleRequest.SingleRequest">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_HeaderViewsHolder_SingleRequestActivity"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_bloodGroup_SingleRequestActivity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:elevation="25dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_bloodGroup_SingleRequestActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="@string/ABPositive"
                        android:textColor="@color/black"
                        android:textSize="60sp"
                        android:textStyle="bold|italic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_gender_SingleRequestActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="3dp"
                        android:drawablePadding="5dp"
                        android:text="@string/male"
                        android:textColor="@color/white"
                        app:drawableStartCompat="@drawable/ic_gender_white"
                        app:layout_constraintBottom_toTopOf="@id/tv_unitBag_SingleRequestActivity"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_unitBag_SingleRequestActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="3dp"
                        android:drawablePadding="5dp"
                        android:text="@string/one"
                        android:textColor="@color/white"
                        app:drawableStartCompat="@drawable/ic_blood_bag"
                        app:layout_constraintBottom_toTopOf="@id/tv_time_SingleRequestActivity"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_time_SingleRequestActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:drawablePadding="5dp"
                        android:text="@string/demoTime"
                        android:textColor="@color/white"
                        app:drawableStartCompat="@drawable/ic_time"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_cause_SingleRequestActivity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/red"
                    android:elevation="25dp"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintBottom_toTopOf="@+id/cv_district_SingleRequestActivity"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_cause_SingleRequestActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="@string/cause"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_district_SingleRequestActivity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/red"
                    android:elevation="25dp"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintBottom_toTopOf="@+id/cv_phoneNumber_SingleRequestActivity"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cv_cause_SingleRequestActivity">

                    <TextView
                        android:id="@+id/tv_district_SingleRequestActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="@string/district"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_phoneNumber_SingleRequestActivity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/red"
                    android:elevation="25dp"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cv_district_SingleRequestActivity">

                    <TextView
                        android:id="@+id/tv_phoneNumber_SingleRequestActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="@string/phone"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_SingleRequestActivity"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:background="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_HeaderViewsHolder_SingleRequestActivity" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_postDetailsHolder_SingleRequestActivity"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_SingleRequestActivity">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profilePicture_SingleRequestActivity"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_profile_picture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_userName_SingleRequestActivity"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/userName"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_profilePicture_SingleRequestActivity"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_lookingForText_SingleRequestActivity"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="3dp"
                android:text="@string/isLookingFor"
                app:layout_constraintStart_toEndOf="@+id/tv_userName_SingleRequestActivity"
                app:layout_constraintTop_toTopOf="@id/tv_userName_SingleRequestActivity" />

            <TextView
                android:id="@+id/tv_bloodGroupInPost_SingleRequestActivity"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="@string/bloodGroup"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_lookingForText_SingleRequestActivity"
                app:layout_constraintTop_toTopOf="@id/tv_userName_SingleRequestActivity" />

            <TextView
                android:id="@+id/tv_timeAgo_SingleRequestActivity"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="@string/timeAgo"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_userName_SingleRequestActivity"
                app:layout_constraintTop_toBottomOf="@+id/tv_userName_SingleRequestActivity" />

            <TextView
                android:id="@+id/tv_area_SingleRequestActivity"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="5dp"
                android:text="@string/demoArea"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_timeAgo_SingleRequestActivity"
                app:layout_constraintStart_toEndOf="@+id/tv_timeAgo_SingleRequestActivity" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_postDescription_SingleRequestActivity"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_margin="5dp"
            android:text="@string/IamthedemoDescriotion"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/cl_postDetailsHolder_SingleRequestActivity"
            app:layout_constraintTop_toBottomOf="@+id/cl_postDetailsHolder_SingleRequestActivity" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_featured_SingleRequestActivity"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="25dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_postDescription_SingleRequestActivity">

            <ImageView
                android:id="@+id/iv_postImage_SingleRequestActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/donateblood_savelife_cover" />

        </com.google.android.material.card.MaterialCardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_likeComments_SingleRequestActivity"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:elevation="26dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintStart_toStartOf="@id/cv_featured_SingleRequestActivity"
            app:layout_constraintTop_toBottomOf="@id/cv_featured_SingleRequestActivity"
            app:layout_constraintEnd_toEndOf="@id/cv_featured_SingleRequestActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/appBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_love_SingleRequestActivity"
                        android:layout_width="25dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_love" />

                    <TextView
                        android:id="@+id/tv_loveValue_SingleRequestActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginStart="10dp"
                        android:textSize="11sp"
                        android:text="@string/_10_love" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_view_SingleRequestActivity"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="30dp"
                        android:src="@drawable/ic_view" />

                    <TextView
                        android:id="@+id/tv_viewValue_SingleRequestActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="11sp"
                        android:text="@string/_100_views" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_share_SingleRequestActivity"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="30dp"
                        android:src="@drawable/ic_share" />

                    <TextView
                        android:id="@+id/tv_shareValue_SingleRequestActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="11sp"
                        android:text="@string/share" />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_acceptRejectRequestHolder_singleRequestActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cv_likeComments_SingleRequestActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_acceptRequest_SingleRequestActivity"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:elevation="25dp"
                app:strokeWidth=".5dp"
                app:strokeColor="@color/green"
                android:backgroundTint="@color/appBackground"
                app:cardCornerRadius="4dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_acceptRequest_SingleRequestActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:clickable="true"
                    android:fontFamily="@font/redressed_regular"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="5dp"
                    android:text="@string/accept"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_rejectRequest_SingleRequestActivity"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:elevation="25dp"
                app:strokeWidth=".5dp"
                app:strokeColor="@color/red"
                android:backgroundTint="@color/appBackground"
                app:cardCornerRadius="4dp"
                app:layout_constraintEnd_toEndOf="@id/cv_shareRequest_SingleRequestActivity"
                app:layout_constraintEnd_toStartOf="@+id/cv_shareRequest_SingleRequestActivity"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cv_acceptRequest_SingleRequestActivity"
                app:layout_constraintTop_toTopOf="@id/cv_acceptRequest_SingleRequestActivity">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_rejectRequest_SingleRequestActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/redressed_regular"
                    android:textAlignment="center"
                    android:text="@string/reject"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_shareRequest_SingleRequestActivity"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:elevation="25dp"
                app:cardCornerRadius="4dp"
                app:strokeWidth=".5dp"
                app:strokeColor="@color/black"
                android:backgroundTint="@color/appBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cv_rejectRequest_SingleRequestActivity"
                app:layout_constraintTop_toTopOf="@id/cv_acceptRequest_SingleRequestActivity">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_shareRequest_SingleRequestActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:fontFamily="@font/redressed_regular"
                    android:textAlignment="center"
                    android:text="@string/share"
                    android:textColor="@color/textColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_editDeleteRequestHolder_singleRequestActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cv_likeComments_SingleRequestActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_edit_SingleRequestActivity"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:elevation="25dp"
                app:strokeWidth=".5dp"
                app:strokeColor="@color/green"
                android:backgroundTint="@color/appBackground"
                app:cardCornerRadius="4dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_edit_SingleRequestActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:fontFamily="@font/redressed_regular"
                    android:text="@string/edit"
                    android:drawableStart="@drawable/ic_edit"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:background="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_deleteRequest_SingleRequestActivity"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:elevation="25dp"
                app:strokeWidth=".5dp"
                app:strokeColor="@color/red"
                android:backgroundTint="@color/appBackground"
                app:cardCornerRadius="4dp"
                app:layout_constraintEnd_toEndOf="@id/cv_shareRequest_SingleRequestActivity"
                app:layout_constraintEnd_toStartOf="@+id/cv_shareRequest_SingleRequestActivity"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cv_acceptRequest_SingleRequestActivity"
                app:layout_constraintTop_toTopOf="@id/cv_acceptRequest_SingleRequestActivity">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_deleteRequest_SingleRequestActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/redressed_regular"
                    android:textAlignment="center"
                    android:text="@string/delete"
                    android:drawableStart="@drawable/ic_delete"
                    android:textColor="@color/red"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_shareEditDeleteHolderRequest_SingleRequestActivity"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:elevation="25dp"
                app:cardCornerRadius="4dp"
                app:strokeWidth=".5dp"
                app:strokeColor="@color/black"
                android:backgroundTint="@color/appBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cv_rejectRequest_SingleRequestActivity"
                app:layout_constraintTop_toTopOf="@id/cv_acceptRequest_SingleRequestActivity">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_shareEditDeleteHolder_SingleRequestActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:fontFamily="@font/redressed_regular"
                    android:textAlignment="center"
                    android:text="@string/share"
                    android:textColor="@color/textColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>