<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userProfile.UserProfile"
    android:orientation="vertical"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back_toolbar_userProfileActivity"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="15dp"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar_userProfileActivity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/toolbar_userProfileActivity" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_userProfileActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_back_toolbar_userProfileActivity"
                app:layout_constraintTop_toTopOf="parent"
                app:title="@string/profile"
                app:titleTextColor="@color/red" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profilePicture_userProfileActivity"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_profile_picture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_userProfileActivity" />

            <TextView
                android:id="@+id/tv_userName_userProfileActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:text="@string/userName"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_profilePicture_userProfileActivity" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_chatAndCallHolder_userProfileActivity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_profilePicture_userProfileActivity"
                app:layout_constraintStart_toEndOf="@id/cv_bloodGroup_userProfileActivity"
                app:layout_constraintTop_toTopOf="@+id/iv_profilePicture_userProfileActivity">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_chat_userProfileActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:elevation="25dp"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintBottom_toTopOf="@+id/cardView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/ll_chat_userProfileActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_chat_userProfileActivity"
                            android:layout_width="41dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_chat_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5.5dp"
                            android:paddingStart="3dp"
                            android:paddingRight="8dp"
                            android:text="@string/chat"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cv_chat_userProfileActivity">

                    <LinearLayout
                        android:id="@+id/ll_phone_UserProfileActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_call_userProfileActivity"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:src="@drawable/ic_call_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5.5dp"
                            android:paddingStart="3dp"
                            android:paddingEnd="8dp"
                            android:text="@string/call"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>




            <TextView
                android:id="@+id/tv_area_userProfileActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/area"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tv_userName_userProfileActivity"
                app:layout_constraintTop_toBottomOf="@id/tv_userName_userProfileActivity" />

            <TextView
                android:id="@+id/tv_comma_userProfileActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comma"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/tv_area_userProfileActivity"
                app:layout_constraintTop_toTopOf="@id/tv_area_userProfileActivity" />

            <TextView
                android:id="@+id/tv_district_userProfileActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/district"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/tv_comma_userProfileActivity"
                app:layout_constraintTop_toTopOf="@id/tv_comma_userProfileActivity" />


            <TextView
                android:id="@+id/tv_phone_userProfileActivity"
                android:layout_width="30dp"
                android:layout_height="6dp"
                android:text="@string/phone"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/tv_userName_userProfileActivity"
                app:layout_constraintTop_toBottomOf="@id/tv_area_userProfileActivity" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_gender_userProfileActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:elevation="25dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_profilePicture_userProfileActivity">

                <LinearLayout
                    android:id="@+id/ll_gender_userProfileActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#605E5E">

                    <TextView
                        android:id="@+id/tv_gender_userProfileActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:paddingStart="4dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="6dp"
                        android:text="@string/gender"
                        android:textAlignment="gravity"
                        android:textColor="@color/white"
                        android:textSize="11sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_bloodGroup_userProfileActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="25dp"
                app:cardCornerRadius="50dp"
                android:layout_marginStart="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_profilePicture_userProfileActivity"
                app:layout_constraintStart_toEndOf="@+id/iv_profilePicture_userProfileActivity"
                app:layout_constraintTop_toTopOf="@+id/iv_profilePicture_userProfileActivity">

                <LinearLayout
                    android:id="@+id/ll_bloodGroup_userProfileActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/red">

                    <TextView
                        android:id="@+id/tv_bloodGroup_userProfileActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="@string/ABPositive"
                        android:textAlignment="gravity"
                        android:textColor="@color/white"
                        android:textSize="11sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_age_userProfileActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:elevation="25dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_area_userProfileActivity">

                <LinearLayout
                    android:id="@+id/ll_age_userProfileActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green">

                    <TextView
                        android:id="@+id/tv_age_userProfileActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAlignment="gravity"
                        android:textSize="11sp"
                        android:padding="4dp"
                        android:text="@string/age"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/view_userProfileActivity"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_phone_userProfileActivity" />

            <LinearLayout
                android:id="@+id/ll_donationStatusHolder_userProfileActivity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_userProfileActivity">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_donationStatus_userProfileActivity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="16dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/ll_donationStatus_userProfileActivity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/green"
                        android:gravity="center"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/tv_donationStatus_userProfileActivity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/redressed_regular"
                            android:gravity="center"
                            android:text="@string/i_want_to_donate"
                            android:textAlignment="gravity"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_totalDonation_userProfileActivity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="16dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/ll_totalDonation_userProfileActivity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/appBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_totalDonation_userProfileActivity"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/redressed_regular"
                            android:gravity="center"
                            android:text="@string/totalDonation"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_totalDonationValue_userProfileActivity"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/redressed_regular"
                            android:gravity="center"
                            android:text="@string/thirteen"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_lastDonationDate_userProfileActivity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="16dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/ll_lastDonationDate_userProfileActivity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/appBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_lastDonationDate_userProfileActivity"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/redressed_regular"
                            android:gravity="center"
                            android:text="@string/lastDonation"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_lastDonationDateValue_userProfileActivity"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/redressed_regular"
                            android:gravity="center"
                            android:text="@string/thirteenthApril2020"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <View
                android:id="@+id/view2_userProfileActivity"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_donationStatusHolder_userProfileActivity" />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:elevation="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/view2_userProfileActivity">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <com.leo.simplearcloader.SimpleArcLoader
                        android:foregroundGravity="center"
                        android:id="@+id/arcLoader_UserProfileActivity"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:visibility="visible"
                        app:arc_style="simple_arc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="visible"
                        android:id="@+id/rv_Posts_userProfileActivity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>






</androidx.core.widget.NestedScrollView>