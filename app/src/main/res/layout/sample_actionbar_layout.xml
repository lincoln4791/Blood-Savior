<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/ll_holder_actionbar_sampleLayoutActionBar">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/displayProfilePicture_sampleLayoutActionBar"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_profile_picture" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_userName_samoleLayoutActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="@string/userName" />

        <TextView
            android:id="@+id/tvOnLineStatus_sampleLayoutActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/redressed_regular"
            android:text="@string/tapForMoreInfo"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivOnlineStatus_sampleLayoutActionBar"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


</LinearLayout>