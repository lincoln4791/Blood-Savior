<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".userProfile.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profilePicture_ProfileFragment"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_profile_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_userName_ProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:text="@string/userName"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_profilePicture_ProfileFragment" />

    <ImageView
        android:id="@+id/iv_editProfile_profileFragment"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_profilePicture_ProfileFragment" />

    <TextView
        android:id="@+id/tv_area_ProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="@string/area"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_userName_ProfileFragment"
        app:layout_constraintTop_toBottomOf="@id/tv_userName_ProfileFragment" />

    <TextView
        android:id="@+id/tv_comma_ProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comma"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_area_ProfileFragment"
        app:layout_constraintTop_toTopOf="@id/tv_area_ProfileFragment" />

    <TextView
        android:id="@+id/tv_district_ProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/district"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tv_comma_ProfileFragment"
        app:layout_constraintTop_toTopOf="@id/tv_comma_ProfileFragment" />


    <TextView
        android:id="@+id/tv_phone_ProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        app:layout_constraintStart_toStartOf="@id/tv_userName_ProfileFragment"
        app:layout_constraintTop_toBottomOf="@id/tv_area_ProfileFragment" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_gender_profileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:elevation="25dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profilePicture_ProfileFragment">

        <LinearLayout
            android:id="@+id/ll_gender_profileFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#605E5E">

            <TextView
                android:id="@+id/tv_gender_profileFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingTop="3dp"
                android:paddingEnd="4dp"
                android:paddingBottom="6dp"
                android:text="@string/gender"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="11sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_bloodGroup_profileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="25dp"
        app:cardCornerRadius="50dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_profilePicture_ProfileFragment"
        app:layout_constraintStart_toEndOf="@+id/iv_profilePicture_ProfileFragment"
        app:layout_constraintTop_toTopOf="@+id/iv_profilePicture_ProfileFragment">

        <LinearLayout
            android:id="@+id/ll_bloodGroup_profileFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red">

            <TextView
                android:id="@+id/tv_bloodGroup_profileFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/ABPositive"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="11sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_age_profileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:elevation="25dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_area_ProfileFragment">

        <LinearLayout
            android:id="@+id/ll_age_profileFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green">

            <TextView
                android:id="@+id/tv_age_profileFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textSize="11sp"
                android:padding="4dp"
                android:text="@string/age"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view_profileFragment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_ProfileFragment" />

    <LinearLayout
        android:id="@+id/ll_donationStatusHolder_profileFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_profileFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_donationStatus_profileFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:elevation="16dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/ll_donationStatus_profileFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:gravity="center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_donationStatus_profileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/redressed_regular"
                    android:gravity="center"
                    android:text="@string/i_want_to_donate"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_totalDonation_profileFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:elevation="16dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/ll_totalDonation_profileFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/appBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_totalDonation_profileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/redressed_regular"
                    android:gravity="center"
                    android:text="@string/totalDonation"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_totalDonationValue_profileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/redressed_regular"
                    android:gravity="center"
                    android:text="@string/thirteen"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_lastDonationDate_profileFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:elevation="16dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/ll_lastDonationDate_profileFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/appBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_lastDonationDate_profileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/redressed_regular"
                    android:gravity="center"
                    android:text="@string/lastDonation"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_lastDonationDateValue_profileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/redressed_regular"
                    android:gravity="center"
                    android:text="@string/thirteenthApril2020"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <View
        android:id="@+id/view2_profileFragment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_donationStatusHolder_profileFragment" />

    <TextView
        android:id="@+id/tv_iWantToDonate_profileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawablePadding="15dp"
        android:text="@string/i_want_to_donate"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/ic_want_to_donate_blood"
        app:layout_constraintStart_toStartOf="@id/tv_nearbyDonars_profileFragment"
        app:layout_constraintTop_toBottomOf="@id/view2_profileFragment" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_iWantToDonate_profileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:shadowColor="@color/green"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="@id/view2_profileFragment"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"/>


    <TextView
        android:id="@+id/tv_nearbyDonars_profileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="15dp"
        android:text="@string/nearbydonars"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/ic_nearby"
        app:layout_constraintStart_toStartOf="@id/tv_userName_ProfileFragment"
        app:layout_constraintTop_toBottomOf="@id/tv_iWantToDonate_profileFragment" />

    <TextView
        android:id="@+id/tv_donarsGroup_profileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="15dp"
        android:text="@string/donarsGroup"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/ic_group"
        app:layout_constraintStart_toStartOf="@id/tv_nearbyDonars_profileFragment"
        app:layout_constraintTop_toBottomOf="@id/tv_nearbyDonars_profileFragment" />

    <TextView
        android:id="@+id/tv_bloodBanks_profileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="15dp"
        android:text="@string/bloodBank"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/ic_blood_bank"
        app:layout_constraintStart_toStartOf="@id/tv_nearbyDonars_profileFragment"
        app:layout_constraintTop_toBottomOf="@id/tv_donarsGroup_profileFragment" />

    <TextView
        android:id="@+id/tv_logout_profileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="15dp"
        android:text="@string/logout"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/ic_logout"
        app:layout_constraintStart_toStartOf="@id/tv_nearbyDonars_profileFragment"
        app:layout_constraintTop_toBottomOf="@id/tv_bloodBanks_profileFragment" />


</androidx.constraintlayout.widget.ConstraintLayout>