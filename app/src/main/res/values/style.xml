<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleRegistrationInputField">
        <item name="android:padding">3dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">20dp</item>
        <item name="elevation">16dp</item>
        <item name="cornerRadius">8dp</item>

    </style>

    <style name="styleUserProfileInputField">
        <item name="android:padding">3dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15dp</item>
        <item name="elevation">16dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="styleUserProfileInputFieldValue">
        <item name="android:padding">3dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15dp</item>
        <item name="elevation">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="styleMainActivity_menu_cardView">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">#E80A0A</item>
        <item name="android:padding">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">10dp</item>
        <item name="android:clickable">true</item>
        <item name="layout_constraintHorizontal_bias">.5</item>
    </style>


    <style name="styleMainActivity_menu_cardView_tab">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#E80A0A</item>
        <item name="android:padding">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">10dp</item>
        <item name="android:clickable">true</item>
        <item name="layout_constraintHorizontal_bias">.5</item>
    </style>

    <style name="styleMainActivity_NavigationBar_Image">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="styleMainActivity_NavigationBar_TextVIew">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#272727</item>
    </style>

    <style name="styleRegistrationActivity_EditTexts">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:background">@color/white</item>

    </style>

    <style name="styleRegistrationActivity_cardViewOfEditTexts">
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">16dp</item>
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Style_GlobalStateDetails">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>



    <style name="Style_GlobalStateDetailsValue">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Style_GlobalStateDetailsView">

    </style>


</resources>